type Dialog {
    id: ID! @id
    name: String!
    roles: [Role!]!
    lines: [Line!]!
    user: User!
}

type Role {
    id: ID! @id
    name: String!
}

type Line {
    id: ID! @id
    text: String!
    guess: String!
    role: Role! @relation(link: INLINE)
    number: Int!
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  dialogs: [Dialog!]!
}
